{
  "name": "housing-monitor-eventstore",
  "description": "Event store for the housing monitoring datastore",
  "version": "0.1.0-0",
  "dependencies": {
    "bunyan": "1.8.12",
    "config": "3.1.0",
    "mongodb": "3.2.3",
    "restify": "8.2.0"
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "migrate-mongo": "^5.0.1",
    "node-mongodb-fixtures": "3.0.1"
  },
  "config": {
    "fixtures": "--path ./test/fixtures/ --url mongodb://localhost:27017/eventstore"
  },
  "scripts": {
    "start": "node .",
    "release:dev": "npm --no-git-tag-version version pre",
    "db:migrate": "migrate-mongo up",
    "test:loaddata": "mongodb-fixtures $npm_package_config_fixtures rebuild",
    "posttest:loaddata": "cross-env MONGO_HOST=localhost npm run db:migrate",
    "test:cleardata": "mongodb-fixtures $npm_package_config_fixtures unload",
    "posttest:cleardata": "cross-env MONGO_HOST=localhost npm run db:migrate"
  }
}
